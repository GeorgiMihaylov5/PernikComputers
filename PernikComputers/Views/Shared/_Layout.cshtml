<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PernikComputers</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-toggleable-md navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand font-weight-bolder" asp-area="" asp-controller="Clients" asp-action="Index">PERNIK <i class="fa-solid fa-computer" style="color: #2196f3"></i></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-md-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                      <li>
                           <a class="nav-link text-dark" asp-area="" asp-controller="Clients" asp-action="AboutUs">About us</a>
                      </li>
                      <li class="pointer nav-item active">
                          <div class="dropdown show">
                               <a class="nav-link active" href="#"
                                       id="dropdownMenuLink"
                                       data-toggle="dropdown"
                                       aria-haspopup="true"
                                       aria-expanded="false">
                                   Products <i class="fa-solid fa-arrow-down-short-wide"></i>
                               </a>

                               <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                   <li>
                                       <a class="dropdown-item" asp-area="" asp-controller="Products" asp-action="All">All Products</a>
                                   </li>
                                                                      <li>
                                       <a class="dropdown-item" asp-area="" asp-controller="Computers" asp-action="All">Computers</a>
                                   </li>
                                   <li>
                                       <a class="dropdown-item"  asp-area="" asp-controller="Laptops" asp-action="All">Laptops</a>
                                   </li>
                                   <li>
                                       <a class="dropdown-item" asp-controller="Components" asp-action="All">
                                           Components <i class="fa-solid fa-caret-right"></i>
                                       </a>
                                       <ul class="dropdown-menu dropdown-submenu">
                                           <li class="nav-item">
                                               <a class="dropdown-item" asp-area="" asp-controller="Components" asp-action="AllProcessors">Processors</a>
                                           </li>
                                           <li class="nav-item">
                                               <a class="dropdown-item" asp-area="" asp-controller="Components" asp-action="AllMotherboards">Motherboards</a>
                                           </li>
                                           <li class="nav-item">
                                               <a class="dropdown-item" asp-area="" asp-controller="Components" asp-action="AllRams">Rams</a>
                                           </li>
                                           <li class="nav-item">
                                               <a class="dropdown-item" asp-area="" asp-controller="Components" asp-action="AllVideoCards">Video Cards</a>
                                           </li>
                                           <li class="nav-item">
                                               <a class="dropdown-item" asp-area="" asp-controller="Components" asp-action="AllPowerSupplies">Power Supplies</a>
                                           </li>
                                           <li class="nav-item">
                                               <a class="dropdown-item" asp-area="" asp-controller="Components" asp-action="AllMemories">Memories</a>
                                           </li>
                                           <li class="nav-item">
                                               <a class="dropdown-item" asp-area="" asp-controller="Components" asp-action="AllComputerCases">Computer Cases</a>
                                           </li>
                                       </ul>
                                   </li>
                                @*   <li>
                                       <a class="dropdown-item">
                                           Computers & Laptops <i class="fa-solid fa-caret-right"></i>
                                       </a>
                                       <ul class="dropdown-menu dropdown-submenu">
                                           <li>
                                               <a class="dropdown-item" asp-area="" asp-controller="Computers" asp-action="All">Computers</a>
                                           </li>
                                           <li>
                                               <a class="dropdown-item" asp-area="" asp-controller="Laptops" asp-action="All">Laptops</a>
                                           </li>

                                       </ul>
                                   </li>*@
                                   <li>
                                       <a class="dropdown-item" asp-controller="Peripheries" asp-action="All">
                                           Peripheries <i class="fa-solid fa-caret-right"></i>
                                       </a>
                                       <ul class="dropdown-menu dropdown-submenu">
                                           <li>
                                               <a class="dropdown-item" asp-area="" asp-controller="Peripheries" asp-action="AllMonitors">Monitors</a>
                                           </li>
                                           <li>
                                               <a class="dropdown-item" asp-area="" asp-controller="Peripheries" asp-action="AllKeyboards">Keyboards</a>
                                           </li>
                                           <li>
                                               <a class="dropdown-item" asp-area="" asp-controller="Peripheries" asp-action="AllMouses">Mouses</a>
                                           </li>
                                       </ul>
                                   </li>
                                   <li>
                                       <a class="dropdown-item" asp-area="" asp-controller="Accessories" asp-action="All">Accessories</a>
                                   </li>
                               </ul>
                           </div>
                      </li>
                       <li>
                           <a class="nav-link text-dark" asp-area="" asp-controller="Products" asp-action="AllDiscounts">Discount</a>
                      </li>
                      <li>
                           <a class="nav-link text-dark" asp-area="" asp-controller="Clients" asp-action="Contacts">Contacts</a>
                      </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container" style="max-width: 1250px">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - PernikComputers - <a asp-controller="Clients" asp-action="Index">Home</a>
        </div>
    </footer>
    <script src="https://kit.fontawesome.com/2ca93d86e5.js" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/7c0ea4aaab.js" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
