@model IEnumerable<PernikComputers.Models.ProductAllViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1 class="title">Products</h1>
<hr />

<div class="bigDiv">
    <div class="mainDiv col-3" id="filterDiv">
    <form class="search row" asp-action="Index" method="get">
       <div class="row" id="priceFilter">
           <h4 class="filterTitles">Price</h4>
            <input type="number" placeholder="Min price" min="0" name="minPrice"/> 
            <span class="dash">-</span>
            <input type="number" placeholder="Max price" min="0" name="maxPrice"/> 
            <button type="submit"><i class="fa fa-search"></i></button>
       </div>
       <div class="row" id="categoryDiv">
         @*  <select>
               @foreach(var item in ViewBag.DropDownCategories)
                {
                    <option>@item</option>
                }
            </select>*@
       </div>
    </form>
</div>

<div class="mainDiv col-md-8" id="productsDiv">
    <ul class="productsUl list-group">
        @foreach(var item in Model)
        {
            <li class="productsLi list-group-item col-md-4">
               <div>
                    <a asp-action="Details" asp-route-id="@item.Id">
                        <img src="@item.Image" width="200" height="200">
                        <h5>@item.Manufacturer @item.Model</h5>
                    </a>
               </div>
               <div style="text-align: center">
                    <p>@item.IsPromotion</p>
               </div>
               <div id="priceDiv">
                   <span class="s">@item.Price lv.</span>
                   <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">SEE MORE</a>
               </div>
            </li>
        }
    </ul>
</div>
</div>




