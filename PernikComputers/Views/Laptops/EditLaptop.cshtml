@model PernikComputers.Models.LaptopCreateViewModel

@{
    ViewData["Title"] = "EditProduct";
}

<h1 class="text-center">Edit Laptop</h1>
<hr />
<div>
    <form asp-action="EditLaptop" class="text-center">
        @await Html.PartialAsync("_LaptopPartialView", Model)
        <div class="form-group mt-4">
            <button type="submit" class="btn-radius btn btn-outline-primary btn-lg">EDIT</button>
            <a asp-action="AllTable" asp-controller="Products" class="mt-1 ml-5 d-block">Back to products</a>
        </div>
    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
