@model IEnumerable<ProductAllViewModel>

@{
    ViewData["Title"] = "Products";
}

<h1 class="page-title">Products</h1>
<hr />

<div class="div-m-top">
    <div class="b-inline-top col-3" id="filter-left">
        <form class="filter-form row" asp-action="Index" method="get">
            <div class="" id="filter-price">
                <h4 class="filter-titles">Price</h4>
                <input type="number" placeholder="Min price" min="0" name="minPrice" />
                <span id="filter-dash">-</span>
                <input type="number" placeholder="Max price" min="0" name="maxPrice" />
                <button type="submit"><i class="fa fa-search"></i></button>
            </div>
            <div class="" id="filter-categories">
                @* <select>
                       @foreach(var item in ViewBag.DropDownCategories)
                        {
                            <option>@item</option>
                        }
                    </select>*@
                <h4 class="filter-titles">Categories</h4>
            </div>
        </form>
    </div>

    <div class="b-inline-top col-lg-8" id="products">
        <ul class="products-list list-group">
            @foreach (var item in Model)
            {
                <li class="products-list-item list-group-item col-3" style="display: grid; align-content: space-between">
                    <div>
                        <a asp-action="Details" asp-controller="Products" asp-route-id="@item.Id">
                            <img src="@item.Image" width="200" height="175">
                            <h5>@item.Manufacturer @item.Model</h5>
                        </a>
                    </div>
                    <div class="text-center h" style="font-size: 14px; height: max-content">
                        @foreach (var characteristic in item.Description)
                        {
                            <p style="margin-bottom: 10px">@characteristic</p>
                        }
                    </div>
                    <div>
                        <div style="height: 24px">
                            @if (item.Discount > 0)
                            {
                                var oldPrice = $"{item.Discount + item.Price:f2}";
                                <p class="mb-0 text-left"><s>@oldPrice lv.</s></p>
                            }
                        </div>
                        <div id="item-price-container">
                            @if (item.Discount > 0)
                            {
                                <span class="font-weight-bold text-danger" style="font-size: 17px">@item.Price lv.</span>
                            }
                            else
                            {
                                <span class="font-weight-bold" style="font-size: 17px"> @item.Price lv.</span>
                            }

                            <a class="btn btn-primary" asp-action="Details" asp-controller="Products" asp-route-id="@item.Id">SEE MORE</a>
                        </div>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>

