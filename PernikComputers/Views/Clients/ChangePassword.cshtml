@model PernikComputers.Models.ChangePasswordViewModel

@{
    ViewData["Title"] = "ChangePassword";
}

<div class="d-lg-inline-block align-top col-3" id="filter-left">
    @await Html.PartialAsync("_ManageLayoutPartialView")
</div>
<div class="d-lg-inline-block align-top col-md-8 m-auto" id="products">
    <div class="col-6 m-auto m-lg-0">
        <form id="change-password-form" method="post" asp-action="ChangePassword">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.OldPassword"></label>
                <input asp-for="@Model.OldPassword" class="form-control" />
                @*<span asp-validation-for="@Model.OldPassword" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="@Model.NewPassword"></label>
                <input asp-for="@Model.NewPassword" class="form-control" />
                @*<span asp-validation-for="@Model.NewPassword" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="@Model.ConfirmPassword"></label>
                <input asp-for="@Model.ConfirmPassword" class="form-control" />
                @*<span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>*@
            </div>
            <button type="submit" class="btn btn-primary">Update password</button>
        </form>
    </div>
</div>